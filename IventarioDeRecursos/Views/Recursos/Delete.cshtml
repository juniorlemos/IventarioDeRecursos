@model IventarioDeRecursos.Models.Recurso

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger mb-5">Sacar  Recurso</h1>


<div>

    <hr class="danger" />

    <dl class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4 shadow p-3 mb-5 bg-white rounded">

            <dt class="col-sm-2 ">
                @Html.DisplayNameFor(model => model.Descricao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Descricao)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Quantidade)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Quantidade)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Observacao)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Observacao)
            </dd>
            <div class="ml-3">
                <form method="post" asp-action="Delete" class="font-weight-bold">

                    <div class="form-group">
                        <label for="txtname">Responsável pelo Saque</label>
                        <input type="text" class="form-control" id="txtname" name="txtName">

                    </div>                   

                    <div class="mt-5">
                        <a asp-action="Index" class="btn btn-secondary col-auto">Voltar</a>
                        <input type="submit" value="Sacar" class="btn btn-danger   float-right" />
                    </div>
                </form>
            </div>
           </div>

    </dl>
    <div class="col-md-4">
    </div>
   





</div>
